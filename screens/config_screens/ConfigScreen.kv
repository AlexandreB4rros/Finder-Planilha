<ListaBipagem@MDGridLayout>
    cols: 3

<ConfigScreen>
    name: 'Config'

    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Configuração"
            anchor_title: 'left'
            elevation: 2.5
            pos_hint_y: "top"
            #pos_hint: {'center_x': 0.5, 'center_y': 0.959}
            left_action_items: [["chevron-left", lambda x: root.mudar_tela()]]
            right_action_items: [["content-save-outline", lambda x: root.aplicar_config(), "aplicar configuração"]]


        MDFloatLayout:
            MDCard:

                pos_hint: {'center_x': 0.5, 'center_y': 0.50}
                size_hint: 0.97, 0.15
                elevation: 1.0
                MDBoxLayout:
                    orientation: "vertical"
                    ListaBipagem:
                        #pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        MDLabel:
                            text: ""
                        MDLabel:
                            text: "Dark"

                        MDCheckbox:
                            id: selecionar_tema_escuro
                            group: 'selecionar_tema'
                    ListaBipagem:
                        #pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        MDLabel:
                            text: ""
                        MDLabel:
                            text: "Ligth"

                        MDCheckbox:
                            id: selecionar_tema_claro
                            group: 'selecionar_tema'


            MDCard:
                orientation: "vertical"
                pos_hint: {'center_x': 0.5, 'center_y': 0.85}
                size_hint: 0.97, 0.20
                elevation: 1.0

                MDBoxLayout:
                    orientation: "vertical"

                    MDTextField:
                        text: "Nome:"
                        size_hint_x: 0.95

                    MDTextField:
                        text: "Grupo:"
                        size_hint_x: 0.95


